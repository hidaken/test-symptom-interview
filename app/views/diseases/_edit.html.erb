<h3>[id: <%=@disease.id%> ]&nbsp;&nbsp;<%=@disease.name %>&nbsp;&nbsp;&nbsp;(ICD10コード：<%= @disease.icd10_1 %>)</h3>

<%= form_for(@disease) do |f| %>
<div class="col-sm-8 block">
    <div class="form-inline">
        <div class ="form-group"> 
            <%= f.label :name, "病名" ,class:"control-label"%>
            <%= f.text_field:name, class:"form-control",placeholder:"名前"%>
        </div>
        <div class ="form-group"> 
            <%= f.label :onset, "発症様式" ,class:"control-label"%>
            <%= f.text_field:onset, class:"form-control",placeholder:"発症様式"%>
        </div>
        <div class ="form-group"> 
            <%= f.label :localization, "局在性" ,class:"control-label"%>
            <%= f.number_field:localization, class:"form-control morbidity",placeholder:"局在性"%>
        </div>
        <div class ="form-group">
            <%= f.label :importance, "重要フラグ" ,class:"control-label"%>
            <%= f.check_box:importance, class:"form-control checkbox"%>
        </div>
    </div>
    
    <div class="form-inline">
        <div class ="form-group">
            <%= f.label :morbidity_male, "男性" ,class:"control-label"%>
            <%= f.number_field:morbidity_male,:step => 0.1, class:"morbidity form-control"%>
        </div>
        <div class ="form-group">
            <%= f.label :morbidity_female, "女性" ,class:"control-label"%>
            <%= f.number_field:morbidity_female,:step => 0.1, class:"form-control morbidity"%>
        </div>
        <div class ="form-group">
            <%= f.label :morbidity_baby, "乳児" ,class:"control-label"%>
            <%= f.number_field:morbidity_baby, :step => 0.1,class:"form-control morbidity"%>
        </div>
            <div class ="form-group">
            <%= f.label :morbidity_child, "児童" ,class:"control-label"%>
            <%= f.number_field:morbidity_child, :step => 0.1,class:"form-control morbidity"%>
        </div>
        <div class ="form-group">
            <%= f.label :morbidity_adult, "成人" ,class:"control-label"%>
            <%= f.number_field:morbidity_adult,:step => 0.1, class:"form-control morbidity"%>
        </div>
        <div class ="form-group">
            <%= f.label :morbidity_senior, "老人" ,class:"control-label"%>
            <%= f.number_field:morbidity_senior,:step => 0.1, class:"form-control morbidity"%>
        </div>
    </div>
    
    <div class="form-inline">
        <div class ="form-group">
            <%= f.label :seasonality12to2, "12月-1月" ,class:"control-label"%>
            <%= f.number_field:seasonality12to2,:step => 0.1, class:"morbidity form-control"%>
        </div>
        <div class ="form-group">
            <%= f.label :seasonality3to5, "3月-5月" ,class:"control-label"%>
            <%= f.number_field:seasonality3to5,:step => 0.1, class:"form-control morbidity"%>
        </div>
        <div class ="form-group">
            <%= f.label :seasonality6to8, "6月-8月" ,class:"control-label"%>
            <%= f.number_field:seasonality6to8,:step => 0.1, class:"form-control morbidity"%>
        </div>
        <div class ="form-group">
            <%= f.label :seasonality9to11, "9月-11月" ,class:"control-label"%>
            <%= f.number_field:seasonality9to11,:step => 0.1, class:"form-control morbidity"%>
        </div>
    </div>
<!--基礎点数をネストしたFormとして表示。ただし、本来は自分のDepartment IDと同じやつだけで良いはず-->
    <%= f.fields_for :frequency_points do |frequency_point| %>
        <div class="form-inline">
            <div class ="form-group">
                <%= frequency_point.label :department_id , "診療科目ID",class:"control-label"%>
                <%= frequency_point.number_field :department_id, class:"form-control morbidity"%>
            </div>
            <div class ="form-group">
                <%= frequency_point.label :point ,"基礎点数", class:"control-label"%>
                <%= frequency_point.number_field :point, class:"form-control morbidity"%>
            </div>
        </div>
       
    <% end %>
    <div class="form-group">
        <%= f.submit class:"btn btn-sm btn-primary pull-right"%>
    </div>
</div>

<div class="col-md-4 disease-detail-text">
    <div class ="form-group"> 
    <label class="control-label">詳細：</label>
    <%= f.text_area:description, class:"form-control",rows:"6",placeholder:"病気詳細"%>
    </div>
</div>



<% end %>

        
 