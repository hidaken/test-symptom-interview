<div class ="panel panel-default">
    <div class="panel-heading">
      <h4><%= @disease.name %>の症状</h4>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>症状分類</th>
            <th>ID</th>
            <th>症状名</th>
            <th>PLR</th>
            <th>備考</th>
            <th>変更</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody class="symptom-index">
<!--Ajaxでモーダル画面での変更後、再更新のためパーシャル化-->
          <%= render "diseases/symptom_index_body" %>
        </tbody>
        
      </table>
      <%= link_to "New",new_disease_symptom_path(disease_id: @disease.id), remote: true, class:"btn btn-sm btn-primary pull-right" %>
    </div>
    <div id="symptom-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
</div>


