<div class="box">
  <h2 class="box-title">医療機関登録</h2>
  <div class="box-inner">
    <%= form_for(@hospital) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "お名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :login_id, class: "form-control", placeholder: "ログインID" %>
      </div>
      <div class="form-group">
        <%= f.number_field :department_id, class: "form-control", placeholder: "診療科目ID" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
      </div>
      <div class="submit-group">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>