<!--モーダル化-->
<div class="modal-dialog">
  <div class="modal-content">    
    <%= form_for(@disease_symptom, remote: true, html:{class:"form-horizontal"}) do |f| %>  
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"><%= @disease_symptom.disease.name %></h4>
    </div>
    <div class="modal-body">
        <div class="field">
            
            <%= render 'shared/error_messages', object: f.object %>
            <!--<div id="error_explanation" style="display:none;"></div>-->
            <div><%= f.hidden_field :disease_id, :value => @disease_symptom.disease_id %></div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label">症状：</label>
                
                <div class="col-sm-7"><%= f.collection_select :symptom_id, Symptom.symptom_category_name_and_symptom_name, :first, :last, {:include_blank => true}, {:class => "form-control"} %></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">症状関連度点数：</label>
                <div class="col-sm-7"><%= f.select :relation_point,[0,1,2,3,4,5],{},{class:"form-control"}%></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">陽性尤度比：</label>
                <div class="col-sm-7"><%= f.select :plr,[0,1,2,3],{},{class:"form-control"}%></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">詳細：</label>
                <div class="col-sm-7"><%= f.text_area:description,class:"form-control",rows:"3"%></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">閉じる</button>
    <%= f.submit class:"btn btn-sm btn-primary"%>
    <% end %>

  </div>
</div>

